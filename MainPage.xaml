<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Clock.MainPage">

    <ScrollView BackgroundColor="#1D2A2A">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="CLOCK"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="40"
                HorizontalOptions="Center" TextColor="#C0E4EE" />

            <Label x:Name="_timeLabel" FontSize="45"
                   HorizontalTextAlignment="Center" 
                    TextColor="#C0E4EE" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
